%nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
  / We use the fluid option here to avoid overriding the fixed width of a normal container within the narrow content columns.
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      =link_to "riceoverflow", root_path, class: "navbar-brand icon-quill large-font"
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown.profile
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            .profile-pic
              = image_tag current_user.image rescue ""
            = current_user.name rescue ""
            %span.caret
          %ul.dropdown-menu{:role => "menu"}
            %li
              = link_to "Sign Out", destroy_user_session_path, method: :delete
      =form_tag search_dashboards_path, id: "search-question", class: "navbar-form navbar-right", role: "search", style: "position: relative; right: 10px;", method: :get do |f|
        .form-group
          =text_field_tag "query", nil, class: "form-control", placeholder: "Search Question"
          =submit_tag nil, style: "display:none"
    / /.navbar-collapse
