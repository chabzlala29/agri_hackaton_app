.form-group
  =render "shared/tag_form"
=form_for @question, html: {role: "form"} do |f|
  .form-group
    = f.label :question
    = f.text_field :question, class: "form-control", placeholder: "Enter your question"
  .form-group
    = f.label :description
    = f.text_area  :description, class: "form-control", placeholder: "Description of your question"
  .form-group
    = f.label :tags
    = f.select :tags, @tags, {}, {multiple: true}
  .form-group
    = f.submit id: "question_submit", class: "btn btn-default"
